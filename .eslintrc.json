{
  "root": true,
  "ignorePatterns": ["node_modules", "dist", ".svelte-kit"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "extends": ["plugin:@typescript-eslint/recommended"]
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["eslint:recommended"]
    }
  ]
}
