{
  "extends": [
    "config:base",
    ":semanticCommits",
    "group:monorepos",
    "group:recommended"
  ],
  "branchConcurrentLimit": 20,
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "automerge": true,
      "labels": ["dependencies"]
    },
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "breaking"]
    },
    {
      "matchSourceUrlPrefixes": [
        "https://github.com/nrwl/",
        "https://github.com/nxext/"
      ],
      "groupName": "NX",
      "automerge": false,
      "labels": ["dependencies"]
    },
    {
      "matchPackagePrefixes": ["@opentelemetry/"],
      "groupName": "opentelemetry",
      "automerge": false,
      "labels": ["dependencies"]
    },
    {
      "matchPackagePrefixes": ["jest", "jest-", "@types/jest"],
      "groupName": "jest",
      "automerge": true,
      "labels": ["dependencies"]
    },
    {
      "matchPackagePatterns": ["@nx-tools/*"],
      "groupName": "nx-tools",
      "automerge": true,
      "labels": ["dependencies"]
    }
  ]
}
