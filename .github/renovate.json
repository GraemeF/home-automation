{
  "extends": ["config:js-app", ":semanticCommits"],
  "prConcurrentLimit": 1,
  "minimumReleaseAge": "5 days",
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "extends": ["monorepo:nx"],
      "automerge": false
    },
    {
      "groupName": "effect",
      "matchPackageNames": ["effect{/,}**", "@effect/{/,}**"]
    },
    {
      "groupName": "nx-tools",
      "matchPackageNames": ["/@nx-tools/*/"]
    },
    {
      "matchPackageNames": ["node.js", "node"],
      "groupName": "node.js"
    }
  ]
}
