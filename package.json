{
  "name": "home-automation",
  "version": "0.0.0",
  "license": "MIT",
  "packageManager": "bun@1.3.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow bun",
    "prepare": "husky",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "serve": "turbo run serve",
    "format": "prettier --write --ignore-unknown . '!packages/**'",
    "format:check": "prettier --check .",
    "ci": "turbo run ci",
    "deps:check": "knip-bun",
    "changeset": "changeset",
    "changeset:pre:beta": "changeset pre enter beta",
    "changeset:pre:exit": "changeset pre exit",
    "version": "changeset version && turbo run version:sync"
  },
  "private": true,
  "devDependencies": {
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "@codeforbreakfast/bun-test-effect": "0.4.1",
    "@codeforbreakfast/eslint-effect": "0.8.5",
    "@effect/language-service": "0.62.4",
    "@testing-library/svelte": "5.2.10",
    "@tsconfig/svelte": "5.0.6",
    "@types/debug": "4.1.12",
    "@types/luxon": "3.7.1",
    "@types/node": "20.19.27",
    "@typescript-eslint/eslint-plugin": "8.49.0",
    "@typescript-eslint/parser": "8.49.0",
    "autoprefixer": "10.4.22",
    "bun-types": "1.3.4",
    "c8": "9.1.0",
    "daisyui": "4.12.24",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-compat": "6.0.2",
    "eslint-plugin-functional": "9.0.2",
    "eslint-plugin-svelte": "3.13.1",
    "eslint-plugin-unused-imports": "4.3.0",
    "husky": "9.1.7",
    "knip": "5.73.3",
    "postcss": "8.5.6",
    "prettier": "3.7.4",
    "prettier-plugin-svelte": "3.4.0",
    "svelte": "5.46.0",
    "svelte-check": "4.3.4",
    "svelte-eslint-parser": "1.4.1",
    "svelte-preprocess": "6.0.3",
    "tailwindcss": "3.4.19",
    "ts-node": "10.9.2",
    "turbo": "2.6.3",
    "typescript": "5.9.3",
    "typescript-eslint": "8.49.0",
    "vite-plugin-checker": "0.12.0",
    "webpack-merge": "6.0.1"
  },
  "dependencies": {
    "svelte-material-icons": "3.0.5",
    "tslib": "2.8.1"
  }
}
