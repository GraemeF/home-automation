{
  "name": "home-automation",
  "version": "0.0.0",
  "license": "MIT",
  "packageManager": "npm@10.9.4",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "serve": "turbo run serve",
    "format": "turbo run format",
    "format:check": "prettier --check .",
    "docker:build:deep-heating": "docker build -f packages/deep-heating/Dockerfile -t deep-heating:latest .",
    "docker:build:socketio": "docker build -f packages/deep-heating-socketio/Dockerfile -t deep-heating-socketio:latest .",
    "docker:build:web": "docker build -f packages/deep-heating-web/Dockerfile -t deep-heating-web:latest .",
    "docker:build:all": "npm run docker:build:deep-heating && npm run docker:build:socketio && npm run docker:build:web"
  },
  "private": true,
  "devDependencies": {
    "@testing-library/svelte": "5.2.8",
    "@tsconfig/svelte": "5.0.5",
    "@types/debug": "4.1.12",
