{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["eslint.config.mjs", "tsconfig.base.json"],
  "tasks": {
    "all": {
      "dependsOn": ["ci"]
    },
    "ci": {
      "dependsOn": ["build", "lint", "test", "//#deps:check"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".svelte-kit/**", ".next/**", "../../dist/**"]
    },
    "test": {
      "dependsOn": ["^build", "lint"],
      "outputs": ["coverage/**"]
    },
    "typecheck": {
      "dependsOn": ["^build", "^typecheck"],
      "outputs": [],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.svelte",
        "**/*.test.ts",
        "**/*.spec.ts",
        "tsconfig*.json",
        "package.json"
      ],
      "cache": true
    },
    "lint": {
      "dependsOn": ["typecheck", "format"]
    },
    "check": {
      "dependsOn": ["^build", "lint"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "serve": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "sync": {
      "outputs": [".svelte-kit/**"]
    },
    "format": {
      "outputs": []
    },
    "version:sync": {
      "inputs": ["package.json"],
      "outputs": ["config.yaml"]
    },
    "//#deps:check": {
      "dependsOn": [],
      "outputs": [],
      "inputs": [
        "packages/*/src/**/*.ts",
        "packages/*/src/**/*.svelte",
        "packages/*/package.json",
        "knip.json",
        "knip.config.*"
      ],
      "cache": true
    }
  }
}
