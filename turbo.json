{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "eslint.config.mjs",
    "tsconfig.base.json",
    "package.json"
  ],
  "tasks": {
    "all": {
      "dependsOn": ["ci"]
    },
    "ci": {
      "dependsOn": ["build", "lint", "test", "//#deps:check", "//#format:check"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".svelte-kit/**", ".next/**", "../../dist/**"]
    },
    "test": {
      "dependsOn": ["^build", "lint"],
      "outputs": ["coverage/**"]
    },
    "typecheck": {
      "dependsOn": ["^build", "^typecheck", "sync"],
      "outputs": [],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.svelte",
        "**/*.test.ts",
        "**/*.spec.ts",
        "tsconfig*.json",
        "package.json",
        "svelte.config.js",
        "vite.config.js"
      ],
      "cache": true
    },
    "lint": {
      "dependsOn": ["typecheck", "format"]
    },
    "check": {
      "dependsOn": ["^build", "lint"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "serve": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "sync": {
      "outputs": [".svelte-kit/**"]
    },
    "format": {
      "outputs": []
    },
    "version:sync": {
      "inputs": ["package.json"],
      "outputs": ["config.yaml"]
    },
    "//#deps:check": {
      "dependsOn": [],
      "outputs": [],
      "inputs": [
        "packages/*/src/**/*.ts",
        "packages/*/src/**/*.svelte",
        "packages/*/package.json",
        "knip.json",
        "knip.config.*"
      ],
      "cache": true
    },
    "//#format:check": {
      "dependsOn": [],
      "outputs": [],
      "inputs": [
        "packages/**/*.ts",
        "packages/**/*.svelte",
        "packages/**/*.json",
        "packages/**/*.md",
        "turbo.json",
        ".prettierrc*",
        "prettier.config.*"
      ],
      "cache": true
    },
    "e2e": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": []
    },
    "//#changeset:pre:beta": {
      "cache": false
    },
    "//#changeset:pre:exit": {
      "cache": false
    }
  }
}
