{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["eslint.config.mjs", "tsconfig.base.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".svelte-kit/**", ".next/**", "../../dist/**"]
    },
    "test": {
      "dependsOn": ["^build", "lint"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "dependsOn": ["^build", "format"]
    },
    "check": {
      "dependsOn": ["^build", "lint"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "serve": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "sync": {
      "outputs": [".svelte-kit/**"]
    },
    "format": {
      "outputs": []
    },
    "version:sync": {
      "inputs": ["package.json"],
      "outputs": ["config.yaml"]
    }
  }
}
